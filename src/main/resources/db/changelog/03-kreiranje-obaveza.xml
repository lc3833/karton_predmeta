<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
    http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

    <changeSet id="1-obaveza-parent" author="lazar">
        <createTable tableName="obaveza">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="obavezna" type="BOOLEAN"/>
            <column name="poeni" type="FLOAT"/>
        </createTable>
    </changeSet>

    <changeSet id="2-predispitna" author="lazar">
        <createTable tableName="predispitna_obaveza">
            <column name="id" type="BIGINT">
                <constraints primaryKey="true" foreignKeyName="fk_predispitna_obaveza" references="obaveza(id)"/>
            </column>
            <column name="opis_aktivnosti" type="VARCHAR(255)"/>
        </createTable>
    </changeSet>

    <changeSet id="3-zavrsni" author="lazar">
        <createTable tableName="zavrsni_ispit">
            <column name="id" type="BIGINT">
                <constraints primaryKey="true" foreignKeyName="fk_zavrsni_ispit" references="obaveza(id)"/>
            </column>
            <column name="format_ispita" type="VARCHAR(255)"/>
        </createTable>
    </changeSet>

</databaseChangeLog>